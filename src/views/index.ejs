<!DOCTYPE html>
<html lang="<%= locale %>">
<head>
    <title>AquaClean | <%= __('index.meta_title') %></title>
    <%- include('partials/head') %>
</head>
<body>
    
    //Barra de navegación
    
    <%- include('partials/navbar') %>

    <section id="inicio" class="hero">
        <div class="container">
            <div class="hero-content">
                <h1><%= __('index.hero_title') %></h1>
                <p><%= __('index.hero_subtitle') %></p>
                <a href="/contact" class="btn"><%= __('index.hero_cta1') %></a>
                <a href="/planes" class="btn"><%= __('index.hero_cta2') %></a><br>
            </div>
        </div>
    </section>

    <section id="servicios" class="services">
        <div class="container">
            <h2><%= __('index.services_title') %></h2>
            <div class="services-grid">
                <div class="service-card">
                    <i class="fas fa-water"></i>
                    <h3><%= __('index.services.0.title') %></h3>
                    <p><%= __('index.services.0.desc') %></p>
                </div>
                <div class="service-card">
                    <i class="fas fa-tools"></i>
                    <h3><%= __('index.services.1.title') %></h3>
                    <p><%= __('index.services.1.desc') %></p>
                </div>
                <div class="service-card">
                    <i class="fas fa-thermometer-half"></i>
                    <h3><%= __('index.services.2.title') %></h3>
                    <p><%= __('index.services.2.desc') %></p>
                </div>
                <div class="service-card">
                    <i class="fas fa-shield-alt"></i>
                    <h3><%= __('index.services.3.title') %></h3>
                    <p><%= __('index.services.3.desc') %></p>
                </div>
            </div>
        </div>
    </section>

    <section id="beneficios" class="benefits">
        <div class="container">
            <div class="benefits-content">
                <h2><%= __('index.benefits_title') %></h2>
                <ul class="benefits-list">
                    <li>
                        <i class="fas fa-check-circle"></i>
                        <span><%= __('index.benefits.0') %></span>
                    </li>
                    <li>
                        <i class="fas fa-check-circle"></i>
                        <span><%= __('index.benefits.1') %></span>
                    </li>
                    <li>
                        <i class="fas fa-check-circle"></i>
                        <span><%= __('index.benefits.2') %></span>
                    </li>
                    <li>
                        <i class="fas fa-check-circle"></i>
                        <span><%= __('index.benefits.3') %></span>
                    </li>
                </ul>
            </div>
            <div class="benefits-image">
                <img src="https://nautilusbr.com/dev/wp-content/uploads/Depositphotos208109670s2019-1.jpeg">
            </div>
        </div>
    </section>

    <section id="galeria" class="gallery">
        <div class="container">
            <h2><%= __('index.gallery_title') %></h2>
            <div class="gallery-grid">
                <div class="gallery-item">
                    <img src="https://s1.eestatic.com/2022/07/14/como/687691935_225819252_1706x960.jpg" alt="Piscina limpia">
                </div>
                <div class="gallery-item">
                    <img src="https://img.freepik.com/fotos-premium/piscina-fondo-hd-8k-fondo-pantalla-imagen-archivo-fotografico_853645-23371.jpg" alt="Técnico midiendo químicos">
                </div>
                <div class="gallery-item">
                    <img src="https://arkpad.com.br/wp-content/uploads/2020/04/area-de-lazer-com-piscina-31.jpg" alt="Spa reluciente">
                </div>
                <div class="gallery-item">
                    <img src="https://www.limpapiscinas.com.br/wp-content/uploads/2020/10/Tratamento-de-Piscina-em-Moema.jpg" alt="Equipo de limpieza">
                </div>
            </div>
        </div>
    </section>

    <%- include('partials/footer') %>

</body>
</html>