<!DOCTYPE html>
<html lang="<%= locale %>">
<head>
    <title>AquaClean | <%= __('contact.title') %></title>
    <%- include('partials/head') %>
</head>
<body>

    <%- include('partials/navbar') %>

    <section id="contacto" class="contact">
        <div class="container">
            <div class="contact-content">
                <form class="contact-form" action="/contact/add" method="POST">
                    <h2><%= __('contact.contact_us') %></h2>
                    
                    <div class="form-group">
                        <label for="email"><%= __('contact.email') %></label><br>
                        <input type="email" id="email" name="email" required>
                    </div>
            
                    <div class="form-group">
                        <label for="name"><%= __('contact.name') %></label><br>
                        <input type="text" id="name" name="name" required>
                    </div>
            
                    <div class="form-group">
                        <label for="comment"><%= __('contact.comment') %></label><br>
                        <textarea id="comment" name="comment" required></textarea>
                    </div>
                    
                    <div class="form-group">
                        <div class="g-recaptcha" data-sitekey="<%= process.env.RECAPTCHA_SITE_KEY %>"></div>
                    </div>

                    <button type="submit" id="form-btn" class="btn"><%= __('contact.send') %></button>
                </form>

                <h2><%= __('contact.social_title') %></h2>

                <div class="contact-info">
                    <div class="social-links">
                        <a href="https://www.facebook.com/profile.php?id=61575330340889"><i class="fab fa-facebook-f"></i></a>
                        <a href="https://www.instagram.com/aquaclean_7/"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include('partials/footer') %>

    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    
<script>
    document.getElementById('contactForm').addEventListener('submit', function(e) {
        if(grecaptcha.getResponse().length === 0) {
            e.preventDefault();
            alert("<%= __('contact.recaptcha_alert') %>");
        }
    });

    // Deshabilitar botón hasta que reCAPTCHA esté verificado
    function enableSubmit() {
        document.getElementById('submitBtn').disabled = false;
    }
</script>
</body>
</html>